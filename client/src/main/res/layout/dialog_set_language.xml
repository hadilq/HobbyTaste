<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:minWidth="@dimen/dialog_width">

    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin_half"
            android:layout_marginStart="@dimen/horizontal_margin_half"
            android:layout_marginEnd="@dimen/horizontal_margin_half"
            android:textColor="@color/text"
            android:textSize="@dimen/font_size_big"
            android:text="@string/language"/>

    <RadioGroup
            android:id="@+id/language_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin_half"
            android:layout_marginStart="@dimen/horizontal_margin_half"
            android:layout_marginEnd="@dimen/horizontal_margin_half">

        <RadioButton
                android:id="@+id/persian_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/persian"
                android:checked="true"/>

        <RadioButton
                android:id="@+id/english_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/english"/>

    </RadioGroup>

    <ir.asparsa.android.ui.view.DialogControlLayout
            android:id="@+id/controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin_half"
            android:layout_marginBottom="@dimen/vertical_margin_half"
            android:layout_marginStart="@dimen/horizontal_margin_half"
            android:layout_marginEnd="@dimen/horizontal_margin_half"/>

</LinearLayout>